<Window x:Class="TackyRSS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:local="clr-namespace:TackyRSS"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="180" Width="300"    ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Button x:Name="loginBtn" IsDefault="True" Margin="21,136,218.6,0" VerticalAlignment="Top" Height="23" Content="Login" Click="loginBtn_Click"/>
        <Button x:Name="cancelBtn" IsCancel="True" Content="Cancel" Margin="112,136,121.6,0" VerticalAlignment="Top"/>
        <Button x:Name="register" Content="New User" HorizontalAlignment="Left" Margin="208,137,0,0" VerticalAlignment="Top" Width="63" Click="register_Click"/>
        <TextBox x:Name="usernamebox" HorizontalAlignment="Left" Height="23" Margin="112,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <PasswordBox x:Name="passwordbox" HorizontalAlignment="Left" Margin="112,76,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="24,28,0,0" TextWrapping="Wrap" Text="Username :" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="27,76,0,0" TextWrapping="Wrap" Text="Password :" VerticalAlignment="Top"/>
    </Grid >
</Window>
